<h1>Pages</h1>

<table>
  <tr>
    <th>Number</th>
    <th>Text</th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= link_to page.number, page %></td>
    <td><%= page.text %></td>
    <td><%= link_to 'Delete', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Page', new_page_path %>