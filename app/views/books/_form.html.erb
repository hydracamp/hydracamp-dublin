<div class="container">
<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this topic from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div id="author-list">
    <% authors = @book.author %>
    <% if authors.empty? %>
      <div class="field">
        <%= f.label :author %><br />
        <%= text_field_tag "book[author][]", "" %>
      </div>
    <% else %>
      <%= f.label :author %><br />
      <% authors.each do |author| %>
        <div style="display:block;clear:both;">
          <span class="field" style="float:left">
            <%= text_field_tag "book[author][]", author %>
          </span>
          <span class="icon-minus-sign remove-author"></span><br />
        </div>
      <% end %> 
    <% end %>
  </div>
  <br />
   <div id="add-author" class="icon-plus-sign"></div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
