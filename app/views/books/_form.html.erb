<div class="container">
<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this topic from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <% authors = @book.author %>
  <% if authors.empty? %>
    <div class="field">
      <%= f.label :author %><br />
      <%= f.text_field :author %>
    </div>
  <% else %>
    <% authors.each do |author| %>
      <div class="field">
        <%= f.label :author %><br />
        <%= text_field_tag "book[author][]", author %>
      </div>
    <% end %> 
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
